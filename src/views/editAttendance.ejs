<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Attendance</title> 
    <link rel="stylesheet" href="css/styles.css">
   </head>
   <style>
     #message-container {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 9999;
      text-align: center;
      width: 300px;
      padding: 10px;
    }
    
    .alert {
      padding: 10px;
      margin-bottom: 10px;
    }
    
    .alert-success {
      background-color: #c1e9c8;
      color: #155724;
    }
    
    .alert-error {
      background-color: #f8d7da;
      color: #721c24;
    }
   </style>
<body>
  <div class="wrapper">
    <h2>Edit update Attendence</h2>
    <form action="/editAtt" method="post">
      <div class="input-box">
        <input name="email" type="text" placeholder="Enter your email" required>
      </div>
      <div class="input-box">
        <input name="date" type="date" required>
      </div>
      <div class="input-box">
        <select name="menu">
            <option value="" selected disabled>Select One</option>
            <option value="present">Mark Present</option>
            <option value="absent">Mark absent</option>
            <option value="leave">Mark Leave</option>
            <option value="delete">Delete Attendance</option>
          </select>
                   
      </div>
      <div class="input-box button">
        <input type="Submit" value="Submit">
      </div>
    </form>
  </div>
  <div id="message-container">
    <% if (message) { %>
      <div class="alert alert-success"><%= message %></div>
      <script>
        setTimeout(() => {
          document.querySelector('#message-container .alert').remove();
        }, 2000);
      </script>
    <% } %>
  </div>
</body>
</html>