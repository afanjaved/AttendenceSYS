        <%
        if (data.length>0) {
            for (let i = 0; i < data.length; i++) {
                %>
       <tr>
        <td><%=data[i].name%></td>
        <td><%=data[i].email%></td>
        <td><%=data[i].password%></td>
        <td><%=data[i]._id%></td> 
        <td><a href="/attendance/<%= data[i]._id %>" style="color:blue;">Attendance</a></td>
       </tr>
                <%  
              }
        } else {
          %>
          <td> colspan="4">u ser not found</td>
          <%
        }
        %>
    </table>
</body>
</html>