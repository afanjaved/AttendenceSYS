</head>
<body>
    <div class="container">
        <div class="wrapper">
            <h1>Admin Panel</h1>
            <form action="/allStudents" method="POST">
                <button class="btn btn-primary" type="submit">All Students</button>
            </form>
            
            <form action="/attendance-edit" method="POST">
                <button class="btn btn-primary" type="submit">Edit/Add/Delete Attendance</button>
            </form>

            <form action="/attendance-report" method="POST">
                <button class="btn btn-primary" type="submit">Create User Attendance Report</button>
            </form>

            <form action="/leaves" method="POST">
                <button class="btn btn-primary" type="submit">Leave Approval Module</button>
            </form>
<br>
                <a class="btn btn-primary" href="/systemReportForm" >Complete System Report</a>


            <form action="/grading-system" method="POST">
                <button class="btn btn-primary" type="submit">Grading System</button>
            </form>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
