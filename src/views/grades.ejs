</head>

<body>
  <div class="container">
    <h1>Results</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>presents</th>
          <th>absents</th>
          <th>leaves</th>
          <th>Grade</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= student.name %></td>
          <td><%= presents %></td>
          <td><%= absents %></td>
          <td><%= leaves %></td>
          <td><%= grade %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>

